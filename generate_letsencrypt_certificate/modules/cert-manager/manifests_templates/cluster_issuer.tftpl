apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: "letsencrypt-http01-01"
  namespace: ${istio_namespace}
spec:
  acme:
    email: ${email}
    server: ${server}
    privateKeySecretRef:
      name: ${private_key_secret_ref}
    solvers:
    - http01:
        ingress:
          class: istio